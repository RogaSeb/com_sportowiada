<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="basic" label="JGLOBAL_FIELDSET_DETAILS">
        <!-- Pole ID - tylko do odczytu -->
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			readonly="true"
			class="readonly"
		/>

        <!-- Pole nazwy dyscypliny -->
        <field
            name="name"
            type="text"
            label="COM_SPORTOWIADA_DISCIPLINE_NAME"
            description="COM_SPORTOWIADA_DISCIPLINE_NAME_DESC"
            required="true"
        />

                <!-- Pole nazwy dyscypliny -->
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
    </fieldset>
</form>
