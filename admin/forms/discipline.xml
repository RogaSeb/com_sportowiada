<?xml version="1.0" encoding="utf-8"?>
<form>
    <!-- Definicja pÃ³l formularza -->
    <fieldset name="basic">
        <field
            name="id"
            type="hidden"
            label="JGLOBAL_FIELD_ID"
            description="COM_SPORTOWIADA_DISCIPLINE_ID_DESC"
        />
        <field
            name="name"
            type="text"
            label="COM_SPORTOWIADA_DISCIPLINE_NAME_LABEL"
            description="COM_SPORTOWIADA_DISCIPLINE_NAME_DESC"
            required="true"
        />
        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
            readonly="true"
            filter="server_utc"
            translateformat="true"
        />
        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="JGLOBAL_FIELD_CREATED_BY_DESC"
            readonly="true"
        />
        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="JGLOBAL_FIELD_MODIFIED_DESC"
            readonly="true"
            filter="server_utc"
            translateformat="true"
        />
        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            description="JGLOBAL_FIELD_MODIFIED_BY_DESC"
            readonly="true"
        />
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>
